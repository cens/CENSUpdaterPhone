<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">
	
    <Preference
          android:key="version_preference"
          android:title="Updater v0.00"
          />
	
	<PreferenceCategory android:title="Automatic Updates">
            <EditTextPreference
                android:key="updateFrequency"
                android:title="Update Frequency"
                android:summary="Frequency in minutes at which update availability is checked."
                android:defaultValue="10"                
                android:numeric="integer"/>
            <CheckBoxPreference
                android:key="autoUpdate"
                android:title="Auto Install"
                android:summary="Perform installation without user interaction."
                android:defaultValue="true"                
            />
            
	</PreferenceCategory>
</PreferenceScreen>
